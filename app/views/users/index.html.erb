<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'partial template/list', book: @book, user: @user %>
		</div>
		<div class="col-lg-9">
		<h2>Users</h2>
	<table class="table table-striped">
	<thead>
	<tr align="center">
		<th>image</th>
 		<th>name</th>
 		<th></th>
 			<th colspan="3"></th>
 		</tr>
	</thead>
	<tbody>
		<% @users.reverse_each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>				        	<td><%= user.name %></td>
			<td><%= link_to 'show', user_path(user.id), class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
		     	</table>
		</div>
		<div class="col-xs-3 col-xs-offset-9">
		      <p style="padding-left:500px;">CopyRight Infratop.inc</p>
		</div>
  </div>
</div>