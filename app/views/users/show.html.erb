<div class="container px-5 px-sm-0">
	<div class="row">
		<div class="col-md-3">
			<%= render 'partial template/list', book: @book, user: @user %>
		</div>
		
		<div class="col-md-8 offset-md-1">
			
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr align="center">
					<th></th>
		      <th>Title</th>
		      <th>Opinion</th>
		      <th colspan="3"></th>
		     </tr>
		  </thead>
		  <tbody>
		  	<% @books.reverse_each do |book| %>
		  	
		  	<td><%= link_to image_tag("no_image.jpg", class: "book_#{@book.id}") %></td>
		  	
		  	
				<td><%= link_to book.title, book, class: "book_#{@book.id}" %></td>
				<td><%= book.body %></td>
				</tr>
		    <% end %>
		   </tbody>
		  </table>
		</div>
		</div>
		<div class="col-xs-3 col-xs-offset-9">
		      <p style="padding-left:500px;">CopyRight Infratop.inc</p>
		</div>
  </div>
</div>
