<!DOCTYPE html>
<html>
    <head>
    <title>BookersVer2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/340021f413.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


 <body>
     <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
         <a class="text-muted" style="font-size: 50px;" ><%= link_to "Bookers", "/" %></a>
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
     </button>

 <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <!--<p class="text-white">.text-white</p>-->

    

          <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>


    
  
              <li>
                  <%= link_to user_path(current_user.id) do %>
                <i class="fas fa-home"></i>
                  <span class="" style="margin-right: 20px;">Home</span>
                  <% end %>
              </li>


              <li>
                   <%= link_to users_path do %>
                    <i class="fas fa-users"></i>
                    <span  class="" style="margin-right: 20px;">Users</span>
                    <% end %>
              </li>

              <li>
                   <%=link_to books_path do %>
                   <i class="fas fa-book-open"></i>
                   <span  class="" style="margin-right: 20px;">Books</span>
                   <% end %>
              </li>

              <li>
                   <%= link_to destroy_user_session_path, method: :delete do %>
                   <i class="fas fa-sign-out-alt"></i>
                   <span  class="" style="margin-right: 20px;">logout</span>
                   <% end %>
              </li>




                <% else %>


         <li>
                <%= link_to root_path do %>
               <i class="fas fa-home"></i>
                <span  class="" style="margin-right: 20px;">Home</span>
                <% end %>
            </li>


            <li>
                <%= link_to homes_about_path do %>
                <i class="fas fa-link"></i>
                <span  class="" style="margin-right: 20px;">About</span>
                <% end %>
            </li>

            <li>
                <%= link_to new_user_registration_path do %>
                <i class="fas fa-user-plus"></i>
                <span  class="" style="margin-right: 20px;">sign up</span>
                <% end %>
            </li>

            <li>
                <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt"></i>
                <span  class="" style="margin-right: 20px;">login</span>
                <% end %>
            </li>



                <% end %>
                </ul>
                
           
        </div>
      </nav>
      </header>


    <div class="container">
        <div class="row">
            <div class="alert-info">
                <% flash.each do |key, value| %>
                <%= content_tag(:div, value, class: "#{key}") %>
                <% end %>
            </div>
        </div>
    </div>



    <%= yield %>

      <p class="no-margin" style="font-size: 11px;">
      <br>
      </p>

  </body>


</html>